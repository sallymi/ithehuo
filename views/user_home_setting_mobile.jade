extends user_home_base
block append script
  script(src='/js/user_home_setting_email.js')
  link(rel='stylesheet', href='/css/user_home_profile.css')
block user_home_content
  .panel
    .panel-heading.c-insetC-header
      span 设置 /
      span 修改手机号码
    .panel-body
      form#settingMobileForm.form-horizontal
        .form-group
          .col-md-2
            label.control-label(for='current_mobile') 当前号码
          .col-md-5
            span=current_mobile?current_mobile:"还未设置手机"
        .form-group
          .col-md-2
            font(color="red")='* '
            label.control-label(for='mobile') 新手机号码
          .col-md-5
            input#phone.form-control(type='mobile' name='mobile' required)
        .form-group
          .col-md-2
            font(color="red")='* '
            label.control-label(for='email_verify') 验证码
          .col-md-3
            input#sms.form-control(type='sms', name='sms', placeholder='', value= sms required)
          .col-md-2
            a.btn.btn-info.pull-right#getSmsCode(style='color:white', href='javascript:;') 获取验证码
        .form-group
          .col-md-5.col-sm-offset-2
            span 修改邮箱操作需要输入用户密码
        .form-group
          .col-md-2
            font(color="red")='* '
            label.control-label(for='password') 密码
          .col-md-5
            input(type="password" style="display:none")
            input#password.form-control(type='password' name='password' required placeholder="用户密码")
        .form-group
          .col-sm-offset-2.col-sm-10
            input.btn.btn-info(type='submit' value='保存更改' data-loading-text='正在保存...')